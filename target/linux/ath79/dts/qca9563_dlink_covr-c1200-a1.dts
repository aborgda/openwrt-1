/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

#include "qca956x.dtsi"

/ {
	model = "D-Link COVR-C1200 A1";
	compatible = "dlink,covr-c1200-a1", "qca,qca9563";

	aliases {
		led-boot = &led3;
		led-failsafe = &led3;
		led-running = &led2;
		led-upgrade = &led3;
	};

	chosen {
		bootargs = "console=ttyS0,115200n8";
	};

	leds {
		compatible = "gpio-leds";

		led1: led1 {
			label = "covr-c1200-a1:yellow:led1";
			gpios = <&gpio 8 GPIO_ACTIVE_HIGH>;
		};

		led2: led2 {
			label = "covr-c1200-a1:white:led2";
			gpios = <&gpio 7 GPIO_ACTIVE_HIGH>;
		};

		led3: led3 {
			label = "covr-c1200-a1:red:led3";
			gpios = <&gpio 6 GPIO_ACTIVE_HIGH>;
		};
	};

	keys {
		compatible = "gpio-keys-polled";
		poll-interval = <20>;

		wps {
			linux,code = <KEY_WPS_BUTTON>;
			gpios = <&gpio 1 GPIO_ACTIVE_LOW>;
			debounce-interval = <60>;
		};

		reset {
			linux,code = <KEY_RESTART>;
			gpios = <&gpio 2 GPIO_ACTIVE_LOW>;
			debounce-interval = <60>;
		};
	};

	gpio-export {
		compatible = "gpio-export";
		#size-cells = <0>;

		gpio_switch_reset {
			gpio-export,name = "covr-c1200-a1:reset:switch";
			gpio-export,output = <1>;
			gpios = <&gpio 11 GPIO_ACTIVE_HIGH>;
		};
	};
};

&uart {
	status = "okay";
};

&gpio {
	status = "okay";
};

&pcie {
	status = "okay";
};

&spi {
	num-cs = <1>;

	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <25000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x000000 0x40000>;
				read-only;
			};

			partition@40000 {
				label = "u-boot-env";
				reg = <0x040000 0x10000>;
				read-only;
			};

			firmware: partition@50000 {
				label = "firmware";
				reg = <0x050000 0xfa0000>;
			};

			art: partition@ff0000 {
				label = "art";
				reg = <0xff0000 0x010000>;
				read-only;
			};
		};
	};
};

&mdio0 {
	status = "okay";

	phy-mask = <0>;

	phy0: ethernet-phy@0 {
		reg = <0>;
		phy-mode = "sgmii";
		qca,mib-poll-interval = <500>;

		qca,ar8327-initvals = <
			0x04 0x00080080 /* PORT0 PAD MODE CTRL */
			0x10 0x81000080 /* POWER_ON_STRIP */
			0x7c 0x0000007e /* PORT0_STATUS */
			>;
	};
};

&eth0 {
	status = "okay";

	pll-data = <0x03000101 0x00000101 0x00001919>;
	mtd-mac-address = <&art 0x0>;

	phy-mode = "sgmii";
	phy-handle = <&phy0>;
};

&wmac {
	status = "okay";
	mtd-cal-data = <&art 0x1000>;
	mtd-mac-address = <&art 0x0>;
	mtd-mac-address-increment = <2>;
};
